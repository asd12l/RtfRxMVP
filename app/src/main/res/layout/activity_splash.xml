<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:contentDescription="@string/content_description"
        android:src="@drawable/splash"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_appname"
        android:contentDescription="@string/content_description"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/appname"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/shadow"
        android:text="@string/powered_by_pwcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_powered_by" />

    <ImageView
        android:id="@+id/iv_logo"
        android:contentDescription="@string/content_description"
        android:src="@drawable/logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:layout_alignBottom="@+id/tv_powered_by"
        android:layout_toRightOf="@+id/tv_powered_by"
        android:layout_toEndOf="@+id/tv_powered_by"
        android:layout_marginBottom="13dp" />



</RelativeLayout>